.chat-side
  .side-header
    .side-box
      %h3.side-header__side-username
        = current_user.name
      %ul.side-header__side-menu
        %li.side-header__icon
          = link_to new_group_path do 
            = icon('far', 'edit')
        %li.side-header__icon
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  .side-group
    - current_user.groups.each do |group|
      .group-list
        = link_to group_messages_path(group) do
          .group-name
            = group.name
          .group-message
            = group.show_last_message